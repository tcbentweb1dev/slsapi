datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ApplicationPrescreen {
  applicationDate    DateTime?
  applicationNo      String             @unique
  applyDate          DateTime?
  borrowerPrescreens BorrowerPrescreen?
  branchCodeOwner    String?
  branchNameOwner    String?
  costCenterOwner    String?
  createdBy          String?
  createdDate        DateTime           @default(now())
  customerName       String?
  customerType       String?
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  idNumber           String?
  referralByBranch   String?
  referralByName     String?
  status             String?
  updatedBy          DateTime?
  updatedDate        DateTime           @updatedAt
}

model BorrowerPrescreen {
  applicationId   ApplicationPrescreen? @relation(fields: [id], references: [id])
  id              String?               @unique @db.ObjectId
  borrowerType    String?
  createdDate     DateTime              @default(now())
  customerType    String?
  dateOfBirth     DateTime?
  id              String                @id @default(auto()) @map("_id") @db.ObjectId
  idNumber        String?
  nameEn          String?
  nameTh          String?
  personalDocType String?
  surnameEn       String?
  surnameTh       String?
  titleEn         String?
  titleTh         String?
  updatedDate     DateTime              @updatedAt
}

model Loan {
  createdAt               DateTime @default(now())
  createDate              DateTime @default(now())
  id                      String   @id @default(auto()) @map("_id") @db.ObjectId
  isSoftLoan              Boolean?
  loanApprovedAmount      Float?
  loanCampainCode         String?
  loanDebtBurden          Float?
  loanNo                  Int
  loanObjective           String?
  loanProductCode         String?
  loanPurpose             String?
  loanRequestAmount       Float?
  loanType                String?
  loanWithdrawalAvailable Float
  updatedAt               DateTime @updatedAt
  updateDate              DateTime @updatedAt
}
